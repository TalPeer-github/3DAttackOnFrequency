{
  "train_walk_npz_path": "pre_created_walks/train",
  "test_walk_npz_path": "pre_created_walks/test",
  "logdir": "saved_checkpoints",
  "num_classes": 40,
  "use_norm_layer": "BatchNorm",

  "args": {
    "num_epochs": 10,
    "batch_size": 8, 
    "lr": 0.001,
    "betas": [0.9, 0.999],
    "weight_decay": 0.0001,
    "base_lr": 1e-5,
    "max_lr": 1e-3,
    "scheduler_step_size": 2000,
    "loss_reduction": "batchmean"
  },

  "layer_sizes": {
    "fc1": 64,
    "fc2": 128,
    "fc3": 256,
    "gru1": 1024,
    "gru2": 1024,
    "gru3": 512,
    "fc4": 512,
    "fc5": 128
  }
}
